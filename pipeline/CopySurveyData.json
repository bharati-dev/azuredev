{
	"name": "CopySurveyData",
	"properties": {
		"activities": [
			{
				"name": "Copy-survey-results-file",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings"
						}
					},
					"sink": {
						"type": "DelimitedTextSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings"
						},
						"formatSettings": {
							"type": "DelimitedTextWriteSettings",
							"quoteAllText": true,
							"fileExtension": ".txt"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "SurveyResults",
						"type": "DatasetReference",
						"parameters": {
							"SourceFilePath": {
								"value": "@pipeline().parameters.SourceFilePath",
								"type": "Expression"
							},
							"SourceFileName": {
								"value": "@pipeline().parameters.SourceFileName",
								"type": "Expression"
							},
							"SourceFileDirectory": {
								"value": "@pipeline().parameters.SourceFileDirectory",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "SurveyDataTarget",
						"type": "DatasetReference"
					}
				]
			}
		],
		"parameters": {
			"SourceFilePath": {
				"type": "string",
				"defaultValue": "/devcontainer01"
			},
			"TargetFilePath": {
				"type": "string",
				"defaultValue": "/devcontainer02"
			},
			"SourceFileDirectory": {
				"type": "string",
				"defaultValue": "/sourcedir01"
			},
			"TargetFileDirectory": {
				"type": "string",
				"defaultValue": "/TgtDir01"
			},
			"SourceFileName": {
				"type": "string",
				"defaultValue": "survey_results_schema.csv"
			},
			"TargetFileName": {
				"type": "string",
				"defaultValue": "survey_results_Target.csv"
			}
		},
		"annotations": []
	}
}