{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "df-dev01"
		},
		"ADLS_Source1_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://sourcestoredev01.dfs.core.windows.net"
		},
		"ADLS_Target1_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https:\\\\targetstoredev01.dfs.core.windows.net"
		},
		"KeyVaultDev01_properties_typeProperties_baseUrl": {
			"type": "string",
			"defaultValue": " https://keydev01.vault.azure.net/"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/SurveyDataTarget')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "ADLS_Target1",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"TargetFilePath": {
						"type": "String"
					},
					"TargetFileName": {
						"type": "String"
					},
					"TargetFileDirectory": {
						"type": "String"
					}
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": {
							"value": "@dataset().TargetFileName",
							"type": "Expression"
						},
						"folderPath": {
							"value": "@dataset().TargetFileDirectory",
							"type": "Expression"
						},
						"fileSystem": {
							"value": "@dataset().TargetFilePath",
							"type": "Expression"
						}
					},
					"columnDelimiter": "|",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"type": "String"
					},
					{
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/ADLS_Target1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/SurveyResults')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "ADLS_Source1",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"SourceFilePath": {
						"type": "String"
					},
					"SourceFileName": {
						"type": "String"
					},
					"SourceFileDirectory": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": {
							"value": "@dataset().SourceFileName",
							"type": "Expression"
						},
						"folderPath": {
							"value": "@dataset().SourceFileDirectory",
							"type": "Expression"
						},
						"fileSystem": {
							"value": "@dataset().SourceFilePath",
							"type": "Expression"
						}
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "Column",
						"type": "String"
					},
					{
						"name": "QuestionText",
						"type": "String"
					}
				]
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/ADLS_Source1')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ADLS_Source1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Source ADLS connection",
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('ADLS_Source1_properties_typeProperties_url')]",
					"accountKey": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "KeyVaultDev01",
							"type": "LinkedServiceReference"
						},
						"secretName": "sourcestoredev01"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/KeyVaultDev01')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/ADLS_Target1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('ADLS_Target1_properties_typeProperties_url')]",
					"accountKey": {
						"type": "AzureKeyVaultSecret",
						"store": {
							"referenceName": "KeyVaultDev01",
							"type": "LinkedServiceReference"
						},
						"secretName": "targetstoredev01"
					}
				}
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/KeyVaultDev01')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/KeyVaultDev01')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureKeyVault",
				"typeProperties": {
					"baseUrl": "[parameters('KeyVaultDev01_properties_typeProperties_baseUrl')]"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/CopySurveyData_copy1')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "fdf",
				"activities": [
					{
						"name": "Copy-survey-results-file",
						"description": "Copy data from one blob to another",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "8.00:00:00",
							"retry": 0,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "DelimitedTextSource",
								"storeSettings": {
									"type": "AzureBlobFSReadSettings",
									"recursive": true
								},
								"formatSettings": {
									"type": "DelimitedTextReadSettings"
								}
							},
							"sink": {
								"type": "DelimitedTextSink",
								"storeSettings": {
									"type": "AzureBlobFSWriteSettings"
								},
								"formatSettings": {
									"type": "DelimitedTextWriteSettings",
									"quoteAllText": true,
									"fileExtension": ".txt"
								}
							},
							"enableStaging": false
						},
						"inputs": [
							{
								"referenceName": "SurveyResults",
								"type": "DatasetReference",
								"parameters": {
									"SourceFilePath": {
										"value": "@pipeline().parameters.SourceFilePath",
										"type": "Expression"
									},
									"SourceFileName": {
										"value": "@pipeline().parameters.SourceFileName",
										"type": "Expression"
									},
									"SourceFileDirectory": {
										"value": "@pipeline().parameters.SourceFileDirectory",
										"type": "Expression"
									}
								}
							}
						],
						"outputs": [
							{
								"referenceName": "SurveyDataTarget",
								"type": "DatasetReference",
								"parameters": {
									"TargetFilePath": {
										"value": "@pipeline().parameters.TargetFilePath",
										"type": "Expression"
									},
									"TargetFileName": {
										"value": "@pipeline().parameters.TargetFileName",
										"type": "Expression"
									},
									"TargetFileDirectory": {
										"value": "@pipeline().parameters.TargetFileDirectory",
										"type": "Expression"
									}
								}
							}
						]
					}
				],
				"parameters": {
					"SourceFilePath": {
						"type": "string",
						"defaultValue": "/devcontainer01"
					},
					"TargetFilePath": {
						"type": "string",
						"defaultValue": "/devcontainer02"
					},
					"SourceFileDirectory": {
						"type": "string",
						"defaultValue": "/sourcedir01"
					},
					"TargetFileDirectory": {
						"type": "string",
						"defaultValue": "/TgtDir01"
					},
					"SourceFileName": {
						"type": "string",
						"defaultValue": "survey_results_schema.csv"
					},
					"TargetFileName": {
						"type": "string",
						"defaultValue": "survey_results_Target.csv"
					}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/SurveyResults')]",
				"[concat(variables('factoryId'), '/datasets/SurveyDataTarget')]"
			]
		}
	]
}