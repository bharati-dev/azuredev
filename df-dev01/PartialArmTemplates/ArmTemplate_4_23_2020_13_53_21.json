{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "df-dev01"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/SurveyResults')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"description": "Source csv file ",
				"linkedServiceName": {
					"referenceName": "ADLS_Source1",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"SourceFilePath": {
						"type": "String"
					},
					"SourceFileName": {
						"type": "String"
					},
					"SourceFileDirectory": {
						"type": "string"
					}
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": {
							"value": "@dataset().SourceFileName",
							"type": "Expression"
						},
						"folderPath": {
							"value": "@dataset().SourceFileDirectory",
							"type": "Expression"
						},
						"fileSystem": {
							"value": "@dataset().SourceFilePath",
							"type": "Expression"
						}
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "Column",
						"type": "String"
					},
					{
						"name": "QuestionText",
						"type": "String"
					}
				]
			},
			"dependsOn": []
		}
	]
}